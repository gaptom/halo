#!/bin/bash
###########################
#清理归档和日志          ##
###########################

ARCHIVEDIR='/pgdata/archivedir'
LOG_PATH='/pgdata/log'
LOG='/home/postgres'

echo "清除前30天归档日志"
echo 'del starting'
find $ARCHIVEDIR -type f -mtime +30 - name '000*'|xargs -i rm -rf {} >> $LOG/dellog.log
echo 'del stoping' 

echo "清除前40天归档日志"
echo 'del starting'
find $LOG_PATH -type f -mtime +40 - name '000*'|xargs -i rm -rf {} >> $LOG/dellog.log
echo 'del stoping' 
